<div class="work-list">
    <% items.experiences.forEach((experience) => { %>
        <div class="work-experience <%= items.experiences.indexOf(experience) == 0 ? 'active' : '' %>" data-work-id="work<%= items.experiences.indexOf(experience) %>" onclick="selectWorkXP(this)">
            <div class="work-header">
                <h3><%= experience.job %></h3></div>
            <div class="work-subheader">
                <p><%= experience.company %></p>
            </div>
        </div>
    <% }) %>
</div>
<div class="work-details">
    <% items.experiences.forEach((experience) => { %>
        <div class="work-detail <%= items.experiences.indexOf(experience) == 0 ? 'active' : '' %>" id="work<%= items.experiences.indexOf(experience) %>">
            <h2 class="work-title">
                <%= experience.job %>
                <span class="work-type"><%= experience.job_type %></span>
            </h2>
            <h4 class="company"><%= experience.company %></h4>
            <p class="duration">
                <span class="duration-from"><%= moment(experience.start).format('MMM YYYY') %> - </span>
                <span class="duration-end"><%= moment(experience.end).format('MMM YYYY') %></span>
                <span class="duration-total">(<%= experience.len %>)</span>
            </p>
            <ul class="work-desc-list">
                <% let sortedPositions = experience.positions.sort((a, b) => (a.position_number > b.position_number) ? -1 : ((b.position_number > a.position_number) ? 1 : 0)); %>
                <% sortedPositions.forEach((pos) => { %>
                    <li class="work-desc">
                        <p class="desc-title"><%= pos.position %></p>
                        <p class="desc-duration">
                            <span class="desc-duration-from"><%= moment(pos.pos_start).format('MMM YYYY') %> - </span>
                            <span class="desc-duration-end"><%= moment(pos.pos_end).format('MMM YYYY') %></span>
                            <span class="desc-duration-total">(<%= pos.pos_len %>)</span>
                        </p>
                        <% if (pos.position_desc.length > 0) { %>
                            <ul class="work-desc-summ">
                                <% pos.position_desc.forEach((desc) => { %>
                                    <li class="work-desc-summ-task">
                                        <%= desc %>
                                    </li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% }) %>
</div>